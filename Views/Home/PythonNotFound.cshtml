@{
    ViewData["Title"] = "Python Not Found";
}

<div class="alert alert-warning mt-5 text-center">
    <h4>Python is not installed on this system.</h4>
    <p>@ViewBag.ErrorMessage</p>
    <a href="https://www.python.org/downloads/" target="_blank" class="btn btn-primary mt-3">
        Download Python
    </a>
    <br />
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-2">Back to Home</a>
</div>
