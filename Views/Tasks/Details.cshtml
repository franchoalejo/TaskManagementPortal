@model TaskManagementPortal.Models.TodoTask

@{
    ViewData["Title"] = "Task Details";
}

<h2>Task Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Assigned Owners</dt>
            <dd class="col-sm-9">
                @string.Join(", ", Model.AssignedOwners)
                <span class="badge bg-info text-dark">(@Model.AssignedOwners.Count)</span>
            </dd>

            <dt class="col-sm-3">Assigned Date</dt>
            <dd class="col-sm-9">@Model.AssignedDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Due Date</dt>
            <dd class="col-sm-9">@Model.DueDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsCompleted)
                {
                    <span class="text-success">Completed</span>
                }
                else
                {
                    <span class="text-warning">Pending</span>
                }
            </dd>

            <dt class="col-sm-3">Days Remaining</dt>
            <dd class="col-sm-9">
                @if (!Model.IsCompleted)
                {
                    var daysRemaining = (Model.DueDate - DateTime.Now).Days;

                    if (daysRemaining < 0)
                    {
                        <span class="text-danger">@daysRemaining days (overdue)</span>
                    }
                    else
                    {
                        <span class="text-success">@daysRemaining days left</span>
                    }
                }
                else
                {
                    <span class="text-muted">Completed</span>
                }
            </dd>
        </dl>
    </div>
</div>

<p>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</p>
