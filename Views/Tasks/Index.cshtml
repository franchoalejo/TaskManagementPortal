@model IEnumerable<TaskManagementPortal.Models.TodoTask>

@{
    ViewData["Title"] = "Task List";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Task List</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Completed</th>
                <th>Assigned Owners</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Id</td>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>
                        @if (task.IsCompleted)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td>@(task.AssignedOwners?.Count ?? 0)</td> <!-- Show number of assigned owners -->
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@task.Id">Edit</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@task.Id">Details</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-3">
        <a class="btn btn-success" asp-action="Create">Create New Task</a>
    </div>
</div>
