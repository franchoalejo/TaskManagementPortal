@model IEnumerable<TaskManagementPortal.Models.TodoTask>

@{
    ViewData["Title"] = "Task List";
}

<h2>Task List</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Task</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Assigned Owners</th>
            <th>Assigned Date</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Days Remaining</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>
                    @string.Join(", ", task.AssignedOwners)
                    <span class="badge bg-info text-dark">(@task.AssignedOwners.Count)</span>
                </td>
                <td>@task.AssignedDate.ToShortDateString()</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>
                    @if (task.IsCompleted)
                    {
                        <span class="text-success">Completed</span>
                    }
                    else
                    {
                        <span class="text-warning">Pending</span>
                    }
                </td>
                <td>
                    @if (!task.IsCompleted)
                    {
                        var daysRemaining = (task.DueDate - DateTime.Now).Days;

                        if (daysRemaining < 0)
                        {
                            <span class="text-danger">@daysRemaining days (overdue)</span>
                        }
                        else
                        {
                            <span class="text-success">@daysRemaining days left</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Completed</span>
                    }
                </td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@task.Id">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@task.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
